# ShopUp Ghana - Environment Variables Template
# Copy this file to .env.local for local development
# Configure these in Vercel Dashboard for production deployment

# ====================
# SUPABASE CONFIGURATION
# ====================
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ====================
# PAYMENT CONFIGURATION
# ====================
# Get from: https://dashboard.paystack.com/#/settings/developer
# Use pk_test_ for testing, pk_live_ for production
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your-key-here

# ====================
# ENVIRONMENT CONFIGURATION
# ====================
# Options: development, staging, production
VITE_ENVIRONMENT=development

# ====================
# ERROR MONITORING (Optional)
# ====================
# Get from: https://sentry.io/settings/projects/
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ====================
# APPLICATION CONFIGURATION
# ====================
VITE_APP_NAME=ShopUp Ghana
VITE_APP_URL=https://shopup.com.gh
VITE_SUPPORT_EMAIL=support@shopup.com.gh

# ====================
# FEATURE FLAGS
# ====================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_COOKIE_CONSENT=true

# ====================
# SECURITY CONFIGURATION
# ====================
# Rate limiting (failed login attempts before lockout)
VITE_MAX_LOGIN_ATTEMPTS=5
# Account lockout duration in minutes
VITE_LOCKOUT_DURATION=15
# Minimum password length
VITE_MIN_PASSWORD_LENGTH=12
